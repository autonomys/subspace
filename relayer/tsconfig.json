{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true
  },
  "include": [
    "./src/**/*"
  ]
}
